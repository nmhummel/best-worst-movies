<% if !current_user %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed</h1>
    
    <p><%= link_to "Sign Up To Write A Review", signup_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>


<table>
   <tr>
      <td>
         <% @movies.each do |m| %>
         <% if m.poster.attached? %>
            <%= image_tag(m.poster, :size => '150x200') %>
         <%else%>
            <%= image_tag("the-title.jpg", :size => '150x200') %>
         <%end%>
      </td>
   </tr>
   <tr>
     <td>
        Title: <%= m.title %><br>
        Genre: <%= m.genre %><br>
        Rating: <%= m.rating %><br>
        Year Released: <%= m.year %><br>
        <%= link_to "Rank #{m.title}", new_movie_ranking_path(m.id) %>     
     </td>
     <% end %>
   </tr>

</table>


