<% if !current_user %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed</h1>
    
    <p><%= link_to "Sign Up To Write A Review", signup_path %></p>
  </div>
<% end %>

<div class = "container">
  <div class="item">
     <% @movies.each do |m| %>
      <% if m.poster.attached? %>
         <%= image_tag m.poster.variant(resize: "100x100") %> 
      <%else%>
         <%= image_tag("the-title.jpg", :size => '150x200') %>
      <%end%>
        Title: <i><%= m.title %></i><br>
        Genre: <%= m.genre %><br>
        Rating: <%= m.rating %><br>
        Year Released: <%= m.year %><br>
        <%= link_to "Rank #{m.title}", new_movie_ranking_path(m.id) %>     
     <% end %>
  </div>
</div>

