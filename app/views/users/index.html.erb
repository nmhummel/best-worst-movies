<br><br><br><br>
<table>
 <tr>
    <% @users.each do |u| %>
        <% if u.avatar.attached? %>
          <td> <%= image_tag(u.avatar, :size => '75') %></td>
        <% else %>
          <td> <%= image_tag("tommy-wiseau.jpg", :size => '75') %></td>
        <%end%>
        <td>
            Username: <%= u.username %>
              <% if u.admin? %>
                <%= mail_to u.email, "(Admin)" %>
              <% end %>
            <br>Favorite Schlock Flop: <i><%= u.best_worst_movie %></i><br><br>
        </td>
    <% end %>
 </tr>
</table>


