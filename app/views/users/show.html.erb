<div class="user-page">
   <div class="user-info">
      <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar.variant(resize: "150x150") %> 
         <% else %>
          <%= image_tag("tommy-wiseau.jpg", :size => '150x150') %> 
      <%end%>
      <br><br>
      <b>Username:</b> <%= current_user.username %><br>
      <b>Email:</b> <%= current_user.email %><br>
      <b>Favorite Schlock Flop:</b> <i><%= current_user.best_worst_movie %></i><br>
     
      <% if user_is_authenticated %>
       <%= link_to "Edit Profile", edit_user_path %> <br><br>
       <%= button_to "Logout", logout_path, method: 'delete' %>
      <%end%>
   </div>
   <br><br>
   <div class="user-movies-rankings">
      <div class="user-movies">
      Your Created Movies
      <% user_movies.each do |um| %>
         <%= link_to "#{um[:title]}", movie_path(um)%><br>
      <%end%>
      </div>
      <div class="user-rankings">
      Your Ranked Movies
      <%current_user.ranked_movies.each do |rm| %>
         <%= link_to "#{rm[:title]}", movie_path(rm)%><br>
      <%end%>
      </div>
   </div>
</div> 
